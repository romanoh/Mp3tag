# Lenght
outputto "Lenght"
findline "Length:</strong>"
replace " hours " ":"
replace " minutes" ""
replace " minute" ""
replace ":</span>" ":00"
findinline "Length:</strong> "
findinline ">"
sayuntil "<"

# Description
outputto "Comment"
findline "Description</h2>"
findline "<div itemprop=\"description\""
joinuntil "</div>"
# Use this to remove the html tags
regexpreplace "<[^>]+>" ""
sayrest

#ISBN
